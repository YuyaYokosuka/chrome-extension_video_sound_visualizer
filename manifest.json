{
	"manifest_version": 2,
	"name": "Video Sound Visualizer",
	"version": "0.1",
	"author": "YuyaYokosuka",
	"description": "Show sound spectrum on video in page",
	"icons": {
		"32":  "icon/on.png",
		"48":  "icon/on.png",
		"128": "icon/on.png"
	},
	"browser_action": {
		"default_icon": "icon/off.png",
		"default_title": "Video Sound Visualizer"
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["script.js", "lib/sound_spectrum.js"]
	}],
	"background": {
		"scripts": ["background.js"]
	},

	"permissions": [
		"tabs",
		"background",
		"http://*/*",
		"https://*/*"
	]
}